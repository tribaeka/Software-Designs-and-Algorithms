{{> syncInputsCheckbox}}
<ul class="list-group my-2">
    {{#each currencies}}
        <li class="list-group-item">
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                {{this.title}} cost of 1 Euro&nbsp;
                                <span class="exchange-rate-input-value-{{this.id}}">{{this.exchangeRate}}</span>
                            </span>
                        </div>
                        <input type="range"
                               min="0"
                               max="10"
                               step="0.5"
                               class="form-control mx-3 exchange-rate-input-{{this.id}}"
                               value="{{this.exchangeRate}}">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                Euro&nbsp;
                                <span class="euro-input-value-{{this.id}}">0</span>
                            </span>
                        </div>
                        <input type="range"
                               min="0"
                               max="10"
                               class="form-control mx-3 euro-input-{{this.id}}"
                               value="0">
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"
                                  id="inputGroup-sizing-default">
                                {{this.title}}&nbsp;
                                <span class="currency-input-value-{{this.id}}">0</span>
                            </span>
                        </div>
                        <input type="range"
                               min="0"
                               max="10"
                               class="form-control mx-3 disabled currency-input-{{this.id}}"
                               aria-describedby="inputGroup-sizing-default"
                               value="0">
                    </div>
                </div>
            </div>
        </li>
    {{/each}}
</ul>
